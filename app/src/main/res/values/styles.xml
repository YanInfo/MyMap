<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="colorAccent">@color/main_color</item>
    </style>
    <style name="RouteDetailTheme" parent="AppTheme">
        <item name="colorAccent">@color/main_color</item>
    </style>
    <style name="WelfareActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="PictureActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="AboutTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>
    <style name="NavCommonListItemTitleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="NavCommonListItemTipsText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="NavSettingDuringDivider">
        <item name="android:src">@drawable/nav_settings_divider_line</item>
        <item name="android:background">@drawable/nav_settings_multiline_middle_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:contentDescription">@null</item>

    </style>

    <style name="NavSettingDuringBtnText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/bnav_setting_btn_text_selector</item>
    </style>

</resources>
